<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:textColorHint">@color/liteGrayColor2</item>
        <item name="android:textColor">@color/grayColor</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
        <item name="preferenceTheme">@style/AppCompactSettingStyle</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:navigationBarColor">@color/primaryColor</item>
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">#ffffff</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/whiteColor</item>
    </style>

    <style name="MyButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/whiteColor</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:textColorPrimary">@color/grayColor</item>
    </style>

    <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorHint">@color/liteGrayColor2</item>
        <item name="android:textColorPrimary">@color/grayColor</item>
        <item name="android:background">@color/backgroundColor</item>
    </style>

    <style name="AppCompactSettingStyle" parent="PreferenceThemeOverlay">
        <item name="android:textColorPrimary">@color/primaryColor</item>
        <item name="android:textColorSecondary">@color/grayColor</item>
        <item name="android:textColorTertiary">@color/grayColor</item>
    </style>

    <style name="CalenderTextColor" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/grayColor</item>
        <item name="android:textSize">@dimen/FontSize_18</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>